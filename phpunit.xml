<?xml version="1.0" encoding="UTF-8"?>

<!-- http://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "project/app/bootstrap.php.cache" >

    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>project/src/*/*Bundle/Tests</directory>
            <directory>project/src/*/Bundle/*Bundle/Tests</directory>
        </testsuite>
    </testsuites>

    <php>
        <server name="KERNEL_DIR" value="/vagrant/project/app/" />
    </php>

    <filter>
        <whitelist>
            <directory>project/src</directory>
            <exclude>
                <directory>project/src/*/*Bundle/Resources</directory>
                <directory>project/src/*/*Bundle/Tests</directory>
                <directory>project/src/*/Bundle/*Bundle/Resources</directory>
                <directory>project/src/*/Bundle/*Bundle/Tests</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
